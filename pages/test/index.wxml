<view>
  <swiper
    indicator-dots='{{true}}'
    indicator-color='#f00'
    indicator-active-color='#fff'
    autoplay='{{true}}'
    current='2'
    interval='1000'
    duration='200'
    circular='{{true}}'
    vertical='{{false}}'
    previous-margin='0px'
    >
    <block wx:for='{{imgs}}' wx:key='{{item}}'>
      <swiper-item>
        <image src='{{item}}' class='slide-image' width='400' height='150'></image>
      </swiper-item>
    </block>
  </swiper>
  <button bindtap='choose'>fsa</button>
  <button bindtap='record'>录音</button>
  <button bindtap='photo'>相机</button>
  <button bindtap='system'>系统信息</button>
  <button bindtap='brateL'>长震动</button>
  <button bindtap='nfc'>NFC</button>
  <button bindtap='login'>login</button>
  <button bindtap='auth'>授权</button>
  <camera
    mode='normal'
    device-position='back'
    style='width:100%;height:100px;'
  ></camera>
</view>